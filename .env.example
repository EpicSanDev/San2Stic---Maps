# San2Stic Environment Configuration

# Database Configuration
POSTGRES_USER=san2stic
POSTGRES_PASSWORD=secure_password_change_this
POSTGRES_DB=san2stic
DATABASE_URL=postgresql://san2stic:secure_password_change_this@db:5432/san2stic

# JWT Authentication
JWT_SECRET=your_jwt_secret_change_this_to_something_secure

# IPFS Configuration (Self-hosted)
IPFS_HOST=ipfs
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_GATEWAY_URL=http://ipfs:8080/ipfs/

# Icecast Streaming Configuration
ICECAST_SOURCE_PASSWORD=secure_source_password_change_this
ICECAST_RELAY_PASSWORD=secure_relay_password_change_this
ICECAST_ADMIN_USER=admin
ICECAST_ADMIN_PASSWORD=secure_admin_password_change_this
ICECAST_HOSTNAME=localhost
ICECAST_URL=http://icecast:8000
ICECAST_MOUNT=/stream

# Tor Hidden Service Configuration
ONION_PREFIX=san2stic
MAX_ATTEMPTS=1000000

# Application Ports (for development)
BACKEND_PORT=4000
ICECAST_PORT=8000
DB_PORT=5432

# Security Configuration
NODE_ENV=production
CORS_ORIGIN=*

# Blockchain Configuration (Base Network)
BLOCKCHAIN_RPC_URL=https://mainnet.base.org
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here
BASESCAN_API_KEY=your_basescan_api_key_here

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
